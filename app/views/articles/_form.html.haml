= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %ul
        - @article.errors.full_messages.each do |err|
          %li= e

  %dl
    %dt= f.label :title
    %dd= f.text_field :title

  %dl
    %dt= f.label :body
    %dd= f.text_area :body

  %dl
    %dt= f.label :status
    %dd= f.select :status, options_for_select({'公開' => 1, '非公開' => 0})

  .actions
    %nav= f.submit 'Save'
